@using Model
@model AuthorViewModel

<div class="row mt-4">
    <div class="col-md-8">
        <h1>@Model.Author.Name</h1>
        <h3>Songs:</h3>
        <ul class="list-group">
            @foreach (var song in Model.Songs)
            {
                <li class="list-group-item">@song.Name</li>
            }
        </ul>
    </div>
</div>
